@model List<FarmlyWeb.Models.CarrinhoItem>

@{
    ViewData["Title"] = "Carrinho de Compras";
}

<h2>Carrinho de Compras</h2>

<table class="table">
    <thead>
        <tr>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Preço Unitário</th>
            <th>Total</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Quantidade</td>
                <td>@item.PrecoUnitario.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <form asp-action="RemoverItem" method="post" style="display: inline;">
                        <input type="hidden" name="id" value="@item.ProdutoId" />
                        <input type="number" name="quantidadeRemover" value="1" min="1" max="@item.Quantidade" class="form-control" style="width: 80px; display: inline;" />
                        <button type="submit" class="btn btn-danger">Remover</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @ViewBag.Total.ToString("C")</h3>

<a asp-controller="Produto" asp-action="Index" class="btn btn-primary">Continuar Comprando</a>
<a asp-controller="Venda" asp-action="FinalizarCompra" class="btn btn-success">Finalizar Compra</a>
