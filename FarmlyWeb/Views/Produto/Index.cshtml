@model List<FarmlyWeb.Models.Produto>

@{
    ViewData["Title"] = "Produtos";
}

<h2>Produtos</h2>

<!-- Formulário de busca -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchQuery" value="@ViewBag.SearchQuery" class="form-control" placeholder="Buscar produto..." />
    <button type="submit" class="btn btn-primary ml-2">Pesquisar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Descricao</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>
                    <form asp-action="AdicionarAoCarrinho" method="post">
                        <input type="hidden" name="id" value="@produto.Id" />
                        <input type="number" name="quantidade" value="1" min="1" class="form-control" style="width: 80px; display: inline;" />
                        <button type="submit" class="btn btn-primary">Adicionar ao Carrinho</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
